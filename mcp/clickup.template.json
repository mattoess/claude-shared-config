{
  "mcpServers": {
    "clickup": {
      "command": "npx",
      "args": ["-y", "@hauptsache.net/clickup-mcp@latest"],
      "env": {
        "CLICKUP_API_KEY": "${CLICKUP_API_TOKEN}",
        "CLICKUP_TEAM_ID": "YOUR_TEAM_ID",
        "CLICKUP_MCP_MODE": "write",
        "MAX_IMAGES": "16",
        "MAX_RESPONSE_SIZE_MB": "4"
      }
    }
  }
}
